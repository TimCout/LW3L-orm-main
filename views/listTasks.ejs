<link rel="stylesheet" href="/CSS/style.css">
<div id="dégradé">
  <h1>Mohamed Henni</h1>
  <h2>Wish List</h2>
  <ul>
    <% for(tv of wishList) { %>
      <li><%= tv.Marque %> <%= tv.Taille %>cm <%= tv.Prix %>€<a href="/delete/<%= tv.idtv %>">Delete</a> <a href="/bought/<%= tv.idtv %>">Achetée</a></li>
    <% } %>
  </ul>

  <h2>Bought List</h2>
  <ul>
    <% for(tv of boughtList) { %>
      <li><%= tv.Marque %> <%= tv.Taille %>cm <%= tv.Prix %>€<a href="/broken/<%= tv.idtv %>">Casser</a></li>
    <% } %>
  </ul>

  <h2>Broken List</h2>
  <ul>
    <% for(tv of brokenList) { %>
      <li><%= tv.Marque %> <%= tv.Taille %>cm <%= tv.Prix %>€<a href="/delete/<%= tv.idtv %>">Retirer</a><br/>
        Cause: <%= tv.Cause %>
      </li>
    <% } %>
  </ul>
</div>

<% let result = 0; %>
<% for(tv of boughtList) { %>
    <% result += tv.Prix; %>
<% } %>
<% let result1 = 0; %>
<% for(tv of brokenList) { %>
    <% result1 += tv.Prix; %>
<% } %>
<% let resulte = result1 + result; %>

<h3 style="text-align: right;"> Total paiement : <%- resulte %>€ </h3>
<h3 style="text-align: right;"> Total en bonne état : <span style="color: green;"><%- result %>€</span> </h3>
<h3 style="text-align: right;"> Argent perdu : <span style="color: red;"> - <%- result1 %>€</span> </h3>


<form action="/add" method="POST">
  Marque :
  <input type="text" name="Marque" value=""><br/>
  Prix :
  <input type="text" name="Prix" min="0" value=""><br/>
  Taille (cm):
  <input type="text" name="Taille" min="0" max="200" value=""><br/>
  <input type="submit" name="save" value="Sauver"><br/>
</form>

